@model Agents

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">

            <h3>
                <a asp-controller="Agents" asp-action="AgentDetails" asp-route-id="@Model.Id">@Model.Name</a>

            </h3>
            <p><i style="font-size:18px" class="fa">&#xf095;</i> &nbsp;  @Model.ContactNumber</p>
            <p>

                @for (int i = 0; i < (Model.Rating); i++)
                {
                    <span class="fa fa-star checked"></span>
                }

                @Model.Rating Stars | @Model.NumberOfReviews.ToString() Reviews
            </p>

            <p style="background-color:lightgray">@Model.LongDescription</p>
        </div>
    </div>
</div>